      <tr><th>_id</th><th>Listing</th><th>Qty</th><th>Total</th><th>Status</th><th>Created</th></tr>
    </thead>
    <tbody>
      <% orders.forEach(o => { %>
        <tr>
          <td><%= o._id %></td>
          <td><%= o.listingId %></td>
          <td><%= o.quantity %></td>
          <td>â‚¹<%= o.totalAmount %></td>
          <td><%= o.status %></td>
